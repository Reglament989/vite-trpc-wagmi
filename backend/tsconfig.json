{
  "compilerOptions": {
    "target": "ES2020",
    "composite": true,

    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,

    "skipLibCheck": true,

    "paths": {
      "@/*": ["./src/*"],
      "@frontend/*": ["../app/src/*"]
    }
  }
}
