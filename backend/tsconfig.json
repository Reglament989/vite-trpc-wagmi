{
  "compilerOptions": {
    "target": "ES2020",
    "composite": true,

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,

    "skipLibCheck": true,

    "paths": {
      "@/*": ["./src/*"],
      "@frontend/*": ["../app/src/*"]
    },
    "tsBuildInfoFile": "dist/.tsbuildinfo"
  },
  "include": ["src", "index.ts"]
}
